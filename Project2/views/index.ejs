<% include ../views/partials/header.ejs %>
<div>you're past orders

</div>

<div class="col-3 col-m-12">
  <div class="aside">
 <h4>Orders</h4>  

<table id="ordersTable">
        <tr id="ordersHeader">
           <th>Order ID</th><th>Name</th><th>Quantity</th><th>Price</th><th>Total</th>
        </tr>

          <% for (var i = 0; i < orders.length; i++) { %>
           <tr>
             <td id="orderIdCell"><%= orders[i].id %></td>
             <td id="nameCell"><%= orders[i].name %></td>
             <td id="quantityCell"><%= orders[i].quantity %></td>
             <td id="priceCell"><%= orders[i].price %></td>
             <td id="totalCell"><%= orders[i].quantity * orders[i].price %> </td>
<tr>
  <td colspan="3">   <div class="deleteOrder">
         <form id="deleteForm" action="/orders/<%= orders[i].id %>?_method=DELETE"  method="POST">
           <input type="submit" value="Cancel">
         </form>
   </div>
</td>
</tr>

<tr>
  <td colspan="3">
   <form id="updateOrderForm" href="/orders/edit/<%= orders[i].id %>?_method=PATCH"  method="PATCH">
     <input type="submit" value="Update">
   </form>
</td>
</tr>


          <% } %>
   </table>
  </div>
</div>
<div class="col-6 col-m-9">
<h1>Place new a order</h1>

<form action="<%= `/orders/new?_method=POST` %>" id="createForm" method="POST">
UserId:
<select id="u_id" name="u_id" form="uForm">
  <option value="1">testuser1</option>
  <option value="2">testuser2</option>
</select>
<br>
product:
<select id="prodList" name="prodList" form="prodForm">
  <option value="2">nintenPi</option>
  <option value="1">customPi</option>
</select>
 quantity:
 <input type="number" name="quantity" id="quantity" value="1" maxlength="9">
 <input type="submit" value="Save changes" >
</form>

  </div>


</div>

